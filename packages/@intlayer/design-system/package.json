{
  "name": "@intlayer/design-system",
  "version": "4.1.1",
  "private": false,
  "description": "Intlayer design system, including UI components used in the Intlayer editor, website, and visual editor/CMS.",
  "keywords": [
    "design-system",
    "intlayer",
    "react",
    "ui"
  ],
  "homepage": "https://intlayer.org",
  "bugs": {
    "url": "https://github.com/aymericzip/intlayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aymericzip/intlayer.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Aymeric PINEAU",
    "url": "https://github.com/aymericzip"
  },
  "contributors": [
    {
      "name": "Aymeric Pineau",
      "email": "ay.pineau@gmail.com",
      "url": "https://github.com/aymericzip"
    }
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.cjs"
    },
    "./libs": {
      "types": "./dist/libs/index.d.ts",
      "import": "./dist/libs/index.mjs",
      "require": "./dist/libs/index.cjs"
    },
    "./tailwind-config": {
      "types": "./dist/tailwind.config.d.ts",
      "import": "./dist/tailwind.config.mjs",
      "require": "./dist/tailwind.config.cjs"
    },
    "./css": "./dist/tailwind.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:package && pnpm build:css",
    "build:css": "tailwindcss --minify -i ./src/tailwind.css -o ./dist/tailwind.css",
    "build:package": "vite build",
    "build:storybook": "storybook build",
    "dev": "vite build --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@intlayer/api": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@intlayer/dictionaries-entry": "workspace:*",
    "@intlayer/editor": "workspace:*",
    "@intlayer/editor-react": "workspace:*",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "deepmerge": "^4.3.1",
    "framer-motion": "^11.18.0",
    "fuse.js": "^7.0.0",
    "markdown-to-jsx": "^7.7.3",
    "react-hook-form": "^7.54.2",
    "react-intlayer": "workspace:*",
    "rollup-preserve-directives": "^1.1.3",
    "shiki": "^1.27.2",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.1",
    "zustand": "^4.5.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.3",
    "@intlayer/backend": "workspace:*",
    "@shikijs/transformers": "^1.27.2",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/addon-onboarding": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/espree": "^10.1.0",
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/parser": "^8.20.0",
    "@utils/eslint-config": "workspace:*",
    "@utils/ts-config": "workspace:*",
    "@utils/ts-config-types": "workspace:*",
    "@utils/tsup-config": "workspace:*",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "fast-glob": "^3.3.3",
    "lucide-react": "^0.471.1",
    "prettier": "^3.4.2",
    "storybook": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@intlayer/api": "workspace:*",
    "@intlayer/config": "workspace:*",
    "@intlayer/core": "workspace:*",
    "@intlayer/dictionaries-entry": "workspace:*",
    "@intlayer/editor": "workspace:*",
    "@intlayer/editor-react": "workspace:*",
    "@monaco-editor/react": "^4.6.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.0",
    "fuse.js": "^7.0.0",
    "intlayer": "workspace:*",
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1",
    "react-intlayer": "workspace:*",
    "tailwind-merge": "^2.6.0",
    "zustand": "^4.5.6"
  }
}
